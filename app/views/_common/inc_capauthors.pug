- console.log(config.sez.users.posttypes[result.post_type].publisher.roles)
if result.capauthors
  - var authorExists = false
  - var customerExists = false
  - var customers = []
  each capauthor in result.capauthors
    if config.sez.users.posttypes[result.post_type].publisher.roles.indexOf(capauthor.user_role_value)!=-1
      - customerExists = true
      - customers.push(capauthor.user_login)
  each capauthor in result.capauthors
    if capauthor.display_name && config.sez.users.posttypes[result.post_type].publisher.roles.indexOf(capauthor.user_role_value) == -1 && customers.indexOf(capauthor.user_login)==-1
      - authorExists = true

    //span.sr-only(itemprop='organizer')
  if customerExists || result.post_type=="news"
    ul.authors
      li
        i.glyphicon.glyphicon-user
        !=" "+config.sez.users.posttypes[result.post_type].publisher.label_multi
      each capauthor in result.capauthors
        if (customerExists && config.sez.users.posttypes[result.post_type].publisher.roles.indexOf(capauthor.user_role_value)!=-1) || !customerExists
          - var baseurl = config.sez.users.posttypes[result.post_type].publisher.baseurl
          li(itemprop=config.sez.users.posttypes[result.post_type].publisher.itemprop, itemscope, itemtype='http://schema.org/Organization')
            a(href='/'+baseurl+'/' + capauthor.user_login+'/', rel='author', title=capauthor.display_name)
              b(itemprop='name')=capauthor.display_name
            if result.post_type == "news"
              .sr-only(itemprop='logo', itemscope, itemtype="http://schema.org/ImageObject")
                img(itemprop='url', src=capauthor.img, alt=global.__("Logo of") + " " + capauthor.display_name)
  if authorExists || result.post_type == "news"
    ul.authors(class=!authorExists ? "sr-only" : undefined)
      li
        i.glyphicon.glyphicon-user
        !=" "+config.sez.users.posttypes[result.post_type].authors.label_multi
      each capauthor in result.capauthors

        - console.log(config.sez.users.posttypes[result.post_type].publisher.roles)

        - console.log(capauthor.user_role_value)
        - console.log(authorExists)

        if (authorExists && config.sez.users.posttypes[result.post_type].publisher.roles.indexOf(capauthor.user_role_value)==-1) || (!authorExists && result.post_type == "news")
          li(itemprop=itemprop=config.sez.users.posttypes[result.post_type].authors.itemprop, itemscope, itemtype='http://schema.org/Person')
            - var baseurl = config.sez.users.posttypes[result.post_type].authors.baseurl
            a(href='/'+baseurl+'/' + capauthor.user_login+'/', rel='author', title=capauthor.display_name)
              b(itemprop='name')=capauthor.display_name
              !=" "
              span(itemprop='jobTitle')=capauthor.user_role
              span.hide
