doctype xml
urlset(xmlns='http://www.sitemaps.org/schemas/sitemap/0.9', xmlns:image="http://www.google.com/schemas/sitemap-image/1.1")
  each result in results
    url
      loc=config.domain+"/"+config.sez[result.type].baseurl +"/"+result.slug+"/"
      if (config.locales.length > 1)
        each locale in config.locales
          if locale == config.default_lang
            xhtml:link(rel="alternate", hreflang=locale, href=config.domain + "/" + config.sez[result.type].baseurl +"/"+result.slug+"/")
          else
            xhtml:link(rel="alternate", hreflang=locale, href=config.domain + "/" + locale + "/" + config.sez[result.type].baseurl +"/"+result.slug+"/")

      lastmod=result.startdateISO
      changefreq yearly
      priority 1.0
      image:image
        image:loc=result.featured.full
        image:title!="<![CDATA["+result.post_title+"]]>"
