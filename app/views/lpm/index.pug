      .item.full-screen
        img(src='/lpm/images/slider/Mapping_01.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
        //.carousel-caption
          a(href=lang_preurl+"/editions/2018-rome/call-to-participate/", title="LPM 2018 Rome | CALL FOR PROPOSALS") Bella
