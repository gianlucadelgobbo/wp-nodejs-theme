          a(href=lang_preurl+"/editions/2018-rome/call-to-participate/", title="LPM 2018 Rome | CALL FOR PROPOSALS") &nbsp;
      .item.full-screen
        img(src='/lpm/images/slider/AV-Performances_09.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
        //.carousel-caption
