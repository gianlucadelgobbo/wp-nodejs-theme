extends layout
block home
  #carousel.carousel.slide(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#carousel', data-slide-to='0')
      li(data-target='#carousel', data-slide-to='1')
      li(data-target='#carousel', data-slide-to='2')
      li(data-target='#carousel', data-slide-to='3')
    // Wrapper for slides
    .carousel-inner(role='listbox')
      .item.active
        a(href=lang_preurl+"/editions/2018-rome/call-for-proposals/", title="LPM 2018 Rome | CALL FOR PROPOSALS")
          img(src='/lpm/images/slider/AV-Performances_09.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
      .item
        a(href=lang_preurl+"/editions/2018-rome/call-for-proposals/", title="LPM 2018 Rome | CALL FOR PROPOSALS")
          img(src='/lpm/images/slider/AV-Performances_14.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
      .item
        a(href=lang_preurl+"/editions/2018-rome/call-for-proposals/", title="LPM 2018 Rome | CALL FOR PROPOSALS")
          img(src='/lpm/images/slider/Installations_03.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
      .item
        a(href=lang_preurl+"/editions/2018-rome/call-for-proposals/", title="LPM 2018 Rome | CALL FOR PROPOSALS")
          img(src='/lpm/images/slider/Mapping_01.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
      .item
        a(href=lang_preurl+"/editions/2018-rome/call-for-proposals/", title="LPM 2018 Rome | CALL FOR PROPOSALS")
          img(src='/lpm/images/slider/Talks_01.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')
      .item
        a(href=lang_preurl+"/editions/2018-rome/call-for-proposals/", title="LPM 2018 Rome | CALL FOR PROPOSALS")
          img(src='/lpm/images/slider/Talks_04.jpg', alt=global.__('Image for') + ': ' + 'LPM 2018 Rome | CALL FOR PROPOSALS')



    // Controls
    a.left.carousel-control(href='#carousel', role='button', data-slide='prev', title=global.__("Previous slide"))
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#carousel', role='button', data-slide='next', title=global.__("Nexts slide"))
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next

block content
  section#container
    .row
      .col-xl-3.col-lg-4.col-md-4.col-sm-6(itemscope, itemtype='http://schema.org/ItemList')
        h1.entry-title(itemprop="name") News
        each result, position in results.news
          include boxes/box_news
        .text-right.boxItem
          a.btn.btn-primary(href="/news/", title="See all News") See all News
      .col-xl-6.col-lg-4.col-md-4.col-sm-6(itemscope, itemtype='http://schema.org/ItemList')
        h1.entry-title(itemprop="name") Satellite Events
        .row.isotope.results
          each result, position in results.events
            .col-xl-6.col-lg-12.col-md-12.col-sm-12.isotopeitem
              include boxes/box_event
        .text-right.boxItem
          a.btn.btn-primary(href="/events/", title="See all Events") See all Events
          !="&nbsp;&nbsp;"
          a.btn.btn-primary(href="/timeline/", title="See all in a Timeline") See all in a Timeline
          !="&nbsp;&nbsp;"
          a.btn.btn-primary(href="/map/", title="See all in a Map") See all in a Map

      .col-xl-3.col-lg-4.col-md-4.col-sm-6(itemscope, itemtype='http://schema.org/ItemList')
        h1.entry-title(itemprop="name") Editions
        each result, position in results.editions
          include boxes/box_edition
        .text-right.boxItem
          a.btn.btn-primary(href="/editions/", title="See all Editions") See all Editions
          !="&nbsp;&nbsp;"
          a.btn.btn-primary(href="/timeline/", title="See all in a Timeline") See all in a Timeline
          !="&nbsp;&nbsp;"
          a.btn.btn-primary(href="/map/", title="See all in a Map") See all in a Map
