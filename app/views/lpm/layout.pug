  .cnt
      .container-fluid(itemscope='', itemtype='http://schema.org/Event')
        header
          .row
            .col-md-6
              #logo
                a(href='/', title=meta_data.meta['name'])
                  img.img-responsive(itemprop='image', src=meta_data.edition['wpcf-header-image'], alt=meta_data.meta['name'])
            .col-md-6
              .row
                .col-md-12
                  #next-edition-cnt
                    #next-edition!=meta_data.edition['wpcf-sub-title']
                  #site-description-cnt
                    #site-description=meta_data.meta['description']
                  include ../_common/inc_eventdateplace_meta
        nav.hidden-xs(role='navigation')
          ul.pulsa
            each menu in meta_data.menu
              li.btn-group
                a.btn.btn-primary.btn-lg.btn.btn-primary.btn-lg(href=menu.permalink)=menu.post_title
                - if (menu.childs.length)
                  button.btn.btn-primary.btn-lg.dropdown-toggle(type='button', data-toggle='dropdown')
                    span.caret
                    span.sr-only Toggle Dropdown
                  ul.dropdown-menu
                    each child in menu.childs
                      li
                        a(href=child.permalink)=child.post_title



        nav.visible-xs.navbar.navbar-default(role='navigation')
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#menu-edition-menu')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='')
          #menu-edition-menu.collapse.navbar-collapse
            // Collect the nav links, forms, and other content for toggling
            ul.nav.navbar-nav
              each menu in meta_data.menu
                li
                  a(href=menu.permalink, data-toggle=menu.childs.length>0 ? 'dropdown' : undefined)=menu.post_title
                    - if (menu.childs.length>0)
                      span.caret
                  - if (menu.childs.length>0)
                    ul.dropdown-menu
                      each child in menu.childs
                        li
                          a(href=child.permalink)=child.post_title
