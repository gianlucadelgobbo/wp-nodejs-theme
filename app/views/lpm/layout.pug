    //link(rel='stylesheet', href='/_common/css/cookielawinfo.css', type='text/css', media='all')
      link(rel='stylesheet', href='/' + config.prefix + '/css/bootstrap.min.' + config.prefix + '.' + meta_data.edition['post_name'] + '.css', type='text/css')
      link(rel='stylesheet', href='/_common/css/style.css', type='text/css', media='all')
      link(rel='stylesheet', href='/' + config.prefix + '/css/style.' + config.prefix + '.css', type='text/css', media='all')
      link(rel='stylesheet', href='/' + config.prefix + '/css/style.' + config.prefix + '.' + meta_data.edition['post_name'] + '.css', type='text/css', media='all')
      if (['2011-minsk','2011-rome','2010-rome','2009-rome','2008-rome','2008-mex','2007-rome','2006-rome','2005-rome','2004-rome'].indexOf(meta_data.edition['post_name'])==-1)
        link(rel='stylesheet', href='/_common/css/bootstrapXL.css', type='text/css', media='all')
    if meta_data.edition[ 'wpcf-background-image' ]
      style(type='text/css').
        body {
          background-image: url(#{meta_data.edition[ 'wpcf-background-image' ]});
        }
  body
    .cnt(itemscope, itemtype='http://schema.org/Event')
      include includes/menu
      div(class=meta_data['url'] == "/" ? "container-fluid" : "container")
        header
          .row
            .col-md-6
              #logo
                a(href='/', title=meta_data.meta['name']+" "+meta_data.edition['post_title'], itemprop='url')
                  img.img-responsive(itemprop='image', src=meta_data.edition['wpcf-header-image'], alt=meta_data.meta['name']+" "+meta_data.edition['post_title'])
                  .sr-only(itemprop='name')=meta_data.meta['name']+" "+meta_data.edition['post_title']
            .col-md-6
              .row
                .col-md-12
                  div(itemprop='disambiguatingDescription')
                    #next-edition-cnt
                      #next-edition!=meta_data.edition['wpcf-sub-title']
                    #site-description-cnt
                      #site-description=meta_data.meta['description']
                  .sr-only
                    include ../_common/inc_eventdateplace_meta
        nav.hidden-xs
          ul.pulsa
            each menu in meta_data.menu
              li.btn-group
                a.btn.btn-primary.btn-lg.btn.btn-primary.btn-lg(title=menu.post_title, href=menu.post_status == 'publish' ? menu.permalink : "#", class=menu.post_status == 'publish' ? undefined : "disabled")=menu.post_title
                if menu.childs.length
                  button.btn.btn-primary.btn-lg.dropdown-toggle(type='button', data-toggle='dropdown',style=menu.post_status == 'publish' ? undefined : "opacity:.65")
                    span.caret
                    span.sr-only Toggle Dropdown
                  ul.dropdown-menu
                    each child in menu.childs
                      li(class=child.post_status == 'publish' ? undefined : "disabled")
                        a(href=child.post_status == 'publish' ? child.permalink : "#", title=child.post_title)=child.post_title



        nav.visible-xs.navbar.navbar-default
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#menu-edition-menu')
              span.sr-only Toggle navigation
              i.icon-bar
              i.icon-bar
              i.icon-bar
            a.navbar-brand(href='/', title="Home")
          #menu-edition-menu.collapse.navbar-collapse
            // Collect the nav links, forms, and other content for toggling
            ul.nav.navbar-nav
              each menu in meta_data.menu
                li
                  a(href=menu.permalink, data-toggle=menu.childs.length>0 ? 'dropdown' : undefined, title=menu.post_title)=menu.post_title
                    - if (menu.childs.length>0)
                      span.caret
                  - if (menu.childs.length>0)
                    ul.dropdown-menu
                      each child in menu.childs
                        li
                          a(href=child.permalink, title=child.post_title)=child.post_title
        br
        #result
          block content
        include includes/footer
