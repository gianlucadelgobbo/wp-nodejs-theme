    link(rel='stylesheet', href='/' + config.prefix + '/css/combo.' + config.prefix + '.' + meta_data.edition['post_name'] + '.min.css', type='text/css')

    //link(rel='stylesheet', href='/_common/css/fontello.css', type='text/css', media='all')
