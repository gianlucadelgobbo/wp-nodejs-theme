extends layout
block content
  article#container(itemscope, itemtype='http://schema.org/' + itemtype)
    //.row
      .col-sm-9
    header
      h1.entry-title
        span.pull-left(itemprop="name")=result.post_title
        span.pull-right
          include ../_common/inc_share_span
    .rientro
      div(itemprop='description')!=result.post_content
      .dateModified.hidden(itemprop='dateModified', content=result.date)=result.dateModifiedHR
      //.col-sm-3
        if result.featured
          img.img-responsive.wp-post-image(src=result.featured.thumbnail, alt!=result.post_title, itemprop='image')
    #map-canvas(style="height:700px;margin-top:10px;")
    script(type="text/javascript").
      var markers = !{JSON.stringify(markers)};
    script(type="text/javascript", src='/' + config.prefix + '/js/map.js')