.boxItem(itemprop="itemListElement", itemscope, itemtype='http://schema.org/Event')
  meta(itemprop="position" content=position + 1)
  .Edition
    .thumb-cnt(itemprop='image', itemscope, itemtype="http://schema.org/ImageObject")

      a(href='/editions/'+result.slug+"/", rel='bookmark', title!=result.title.rendered)
        img.img-responsive(src=result.featured.thumbnail, alt!='Image for: '+result.title.rendered, itemprop='url')
        meta(itemprop="width" content="480")
        meta(itemprop="height" content="270")
    .box-list
      .box-list-cnt
        .text-muted
          include ../../_common/inc_eventdate
        h3.list_title(itemprop='name')
          a(itemprop='url', href='/editions/'+result.slug+"/", rel='bookmark', title=result.title.rendered)!=result.title.rendered
        .places
          include ../../_common/inc_place
        .text-muted.small.excerpt
          if result.excerpt && result.excerpt.rendered
            div(itemprop='description')
              p!=result.excerpt.rendered
          span.sr-only(itemprop='organizer')
