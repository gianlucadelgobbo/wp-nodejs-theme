.boxItem(itemprop="itemListElement", itemscope, itemtype='http://schema.org/Event')
  meta(itemprop="position" content=position+1)
  .Event
    .thumb-cnt(itemprop='image', itemscope, itemtype="http://schema.org/ImageObject")
      .thumb-cnt-cnt
        a.ajaxloader(href='/events/'+result.slug+"/", rel='bookmark', title!=result.post_title)
          img.img-responsive(src=result.featured.thumbnail, alt!=global.__('Image for')+': '+result.post_title, itemprop='url')
          meta(itemprop="width" content="480")
          meta(itemprop="height" content="270")
    .box-list
      .text-center
        .text-muted.supText
          include ../../_common/inc_eventdateplace
        h3.list_title(itemprop='name')!=result.post_title.replace(" | ","<br />")
      .read-more-box
        a.ajaxloader(href='/events/'+result.slug+"/", rel='bookmark', title!=result.post_title, itemprop='url')
          .sr-only=__("Read more")
          i.icon-right