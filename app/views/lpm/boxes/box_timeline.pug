div(class="rowTimeline rowTimeline-"+result.type, itemscope, itemtype='http://schema.org/itemListElement')
  .row(itemscope='', itemtype='http://schema.org/Event')
    div(class="col-sm-"+(result.type=="edition" ? 3 :4))
      .timelineDate
        .dates
          include ../../_common/inc_date
        .places
          if result['wpcf-location']
            include ../../_common/inc_place
    div(class="col-sm-"+(result.type=="edition" ? 4 :2))
      a(itemprop='image', itemscope, itemtype='https://schema.org/ImageObject', href='/events/' + result.slug, rel='bookmark', title!=result.title.rendered)
        if result.featured
          img.img-responsive(src=result.featured.thumbnail, alt!='Image for: ' + result.title.rendered, itemprop='url')
    div(class="col-sm-"+(result.type=="edition" ? 3 :4))
      h2.timelineTitle(itemprop='name')
        a(itemprop='url', href='/events/' + result.slug, rel='bookmark', title=result.title.rendered)!=result.title.rendered
      .text-muted.small
        .catlabel=result.type
        p!=result.excerpt.rendered
    .col-sm-2
