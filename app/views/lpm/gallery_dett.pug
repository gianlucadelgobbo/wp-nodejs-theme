extends layout
block content
  article#container(itemscope='', itemtype='http://schema.org/Event')
    header
      h1.entry-title(itemprop='name')=result.post_title+": "+result.post_gallery.titolo+(result.post_gallery.dettMedia.titolo ? " | "+result.post_gallery.dettMedia.titolo : "")
        !=" "
        small=result.post_gallery.performers[0].nomearte
    if result.post_gallery.dettMedia
      img.img-responsive(itemprop='image', src='https://flxer.net/' + result.post_gallery.dettMedia.folder+'/' + result.post_gallery.dettMedia.name, alt=result.post_gallery.dettMedia.titolo)
    ul#listItems.row
      each gall in result.post_gallery.sorted
        - console.log(gall)
        li.col-xl-3.col-lg-4(style='margin-bottom: 30px;', itemprop='itemListElement', itemscope='', itemtype='http://schema.org/CreativeWork')
          a(itemprop='url', href='/gallery/'+result.post_gallery.performers[0].login+'/'+result.post_gallery.permalink+'/'+gall.permalink+'/', title='Gallery image of '+gall.titolo)
            img.img-responsive(itemprop='image', src='https://flxer.net'+gall.thumb, alt='')
          .caption(style='padding-right:15px;padding-left:15px;')
            .caption-body
              h2.caption-title(itemprop='name')=gall.titolo
              .caption-author(itemprop='author', itemscope='', itemtype='http://schema.org/Person')
                !="<br />"+gall.visite



