extends layout
block content
  article.pagepaddingtop#container(itemprop=itemprop, itemscope, itemtype='http://schema.org/Person')
    .row
      .col-sm-9
        img.img-responsive.main-image(src=result.data.img, alt=result.data.display_name, itemprop='image')

        div(itemprop='description')!=result.data.description
      .col-sm-3
        header
          h1.entry-title
            span.pull-left(itemprop="name")=result.data.display_name
            span.pull-right
              include ../_common/inc_share_span
        .rientro
          p(itemprop='jobTitle')
            i=result.data.role
            p
              if result.data.auth_contents.editions && result.data.auth_contents.editions.posts.length
                !=result.data.auth_contents.editions.labels.name + ": " + result.data.auth_contents.editions.posts.length
                br
              if result.data.auth_contents.events && result.data.auth_contents.events.posts.length
                !=result.data.auth_contents.events.labels.name + ": " + result.data.auth_contents.events.posts.length
                br
              if result.data.auth_contents.news && result.data.auth_contents.news.posts.length
                !=result.data.auth_contents.news.labels.name + ": " + result.data.auth_contents.news.posts.length
    if result.data.auth_contents.editions && result.data.auth_contents.editions.posts.length
      - var res = result.data.auth_contents.editions
        section(itemscope, itemtype="https://schema.org/ItemList")
          h3(itemprop="name")=res.labels.name
          .row.isotope.results
            each result, position in res.posts
              .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
                include boxes/box_edition
    if result.data.auth_contents.events && result.data.auth_contents.events.posts.length
      - var res = result.data.auth_contents.events
        section(itemscope, itemtype="https://schema.org/ItemList")
          h3(itemprop="name")=res.labels.name
          .row.isotope.results
            each result, position in res.posts
              .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
                include boxes/box_event
    if result.data.auth_contents.news && result.data.auth_contents.news.posts.length
      - var res = result.data.auth_contents.news
      section(itemscope, itemtype="https://schema.org/ItemList")
        h3(itemprop="name")=res.labels.name
        .row.isotope.results
          each result, position in res.posts
            .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
              include boxes/box_news