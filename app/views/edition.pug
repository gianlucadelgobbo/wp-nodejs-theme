extends layout
block content
	article#container(itemscope='', itemtype='http://schema.org/Event')
		.row
			.col-sm-9
				header
					h1.entry-title(itemprop='name')=data.post_title
				.rientro
					if data.startdateHR || data.enddateHR || data.data_evento
						.dates
							span.sr-only
								if data.startdateHR
									span(itemprop='startDate', content=data.startdateISO)=data.startdateHR
									!=" | "
								if data.enddateHR
									span(itemprop='endDate', content=data.enddateISO)=data.enddateHR
							if data.data_evento
								.date=data.data_evento
					if data['wpcf-location'][0]
						.places
							each location in data['wpcf-location']
								- locationA = location.split(";")
								.place(itemprop='location', itemscope='', itemtype='http://schema.org/Place')
									span.placeName(itemprop='name')=locationA[0]
									!=", "
									span(itemprop='address', itemscope='', itemtype='http://schema.org/PostalAddress')
										span.addressLocality(itemprop='addressLocality')=locationA[1]
										!=" | "
										span.addressCountry(itemprop='addressCountry')=locationA[2]
									span(itemprop='geo', itemscope='', itemtype='http://schema.org/GeoCoordinates')
										meta(itemprop='latitude', content=locationA[3])
										meta(itemprop='longitude', content=locationA[4])
					div(itemprop='description')!=data.post_content
				if data['wpcf-add-grid-boxes']
					if data['wpcf-rows'] && data['wpcf-columns']
						- var row=1;
						- var col=1;
						- var rowsN = data['wpcf-rows']+1;
						- var columnsN = data['wpcf-columns']+1;
						if rowsN>0 && columnsN>0
							if data['wpcf-same-rows-height']==1
								each row in data.grid
									if row
										.row
											- var conta = 0
											each col in row
												- if (col.tit) conta++
											- var span = 12/conta
											each col in row
												if col.tit
													div(class="col-sm-"+span)
														h3!=col.tit+(col.stit ? "<br /><small>"+col.stit+"</small>" : "")
														.rientro!=col.box
							else
								if data.grid
									.row
										- span = 12/data.grid.length
										each col in data.grid
											if col
												div(class="col-sm-"+span)
													each row in col
														if row.tit
															h3!=row.tit + (row.stit ? "<br /><small>"+row.stit+"</small>" : "")
															.rientro!=row.box


					br
					.a2a_kit.a2a_kit_size_32.addtoany_list(data-a2a-url='http://liveperformersmeeting.net/event/approaches-to-multichannel-sound-using-reaktor/', data-a2a-title='Approaches to Multichannel Sound Using Reaktor Workshop', style='line-height: 32px;')
						a.a2a_button_twitter(href='/#twitter', title='Twitter', rel='nofollow', target='_blank')
							span.a2a_svg.a2a_s__default.a2a_s_twitter
							span.a2a_label Twitter
						a.a2a_button_facebook(href='/#facebook', title='Facebook', rel='nofollow', target='_blank')
							span.a2a_svg.a2a_s__default.a2a_s_facebook
							span.a2a_label Facebook
						a.a2a_button_google_plus(href='/#google_plus', title='Google+', rel='nofollow', target='_blank')
							span.a2a_svg.a2a_s__default.a2a_s_google_plus
							span.a2a_label Google+
						a.a2a_button_pinterest(href='/#pinterest', title='Pinterest', rel='nofollow', target='_blank')
							span.a2a_svg.a2a_s__default.a2a_s_pinterest
							span.a2a_label Pinterest
						a.a2a_button_vk(href='/#vk', title='VK', rel='nofollow', target='_blank')
							span.a2a_svg.a2a_s__default.a2a_s_vk
							span.a2a_label VK
						a.a2a_button_email(href='/#email', title='Email', rel='nofollow', target='_blank')
							span.a2a_svg.a2a_s__default.a2a_s_email
							span.a2a_label Email
						a.a2a_dd.addtoany_share_save(href='https://www.addtoany.com/share#url=http%3A%2F%2Fliveperformersmeeting.net%2Fevent%2Fapproaches-to-multichannel-sound-using-reaktor%2F&title=Approaches%20to%20Multichannel%20Sound%20Using%20Reaktor%20Workshop&description=Workshop%20%E2%9E%9D%20Approaches%20to%20Multichannel%20Sound%20Using%20Reaktor%20Curated%20by%C2%A0CC4AV%20Date%20%E2%9E%9D%20November%2022%20-%2026%20Time%20%E2%9E%9D%2010%20am%20-%204%20pm%20Sound%20and%20Space%20are%20intrinsically')
							span.a2a_svg.a2a_s__default.a2a_s_a2a
							span.a2a_label Share
			.col-sm-3
				img.img-responsive.wp-post-image(src=data.featured.thumbnail, alt=data.post_title, itemprop='image')

