#myAffix.affix-top(data-spy='affix', data-offset-top='90')
  nav.navbar.navbar-inverse(role='navigation')
    .container-fluid
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        // .navbar-toggle is used as the toggle for collapsed navbar content
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#main-navbar')
          span.sr-only Toggle navigation
          i.icon-bar
          i.icon-bar
          i.icon-bar
        // Be sure to leave the brand out there if you want it shown
        a.navbar-brand.visible-xs(href='/', title=meta_data.meta.name)
          img.img-responsive(src='/shockart/images/shockart_logo_full.svg', alt=meta_data.meta.name)
      // Place everything within .navbar-collapse to hide it until above 768px
      #main-navbar.collapse.navbar-collapse
        ul#menu-main-menu.nav.navbar-nav
          li(class=meta_data['url']=="/" || meta_data['url']=="/it/" ? "active" : undefined)
            a(href=lang_preurl+'/')=global.__("Home")
          li(class=meta_data['url'].indexOf('/project') >= 0 ? "active" : undefined)
            a(href=lang_preurl+'/project/')=global.__("Project")
          li(class=meta_data['url'].indexOf('/exhibitions') >= 0 ? "active" : undefined)
            a(href=lang_preurl+'/exhibitions/')=global.__("Exhibitions")
          li(class=meta_data['url'].indexOf('/events') >= 0 ? "active" : undefined)
            a(href=lang_preurl + '/events/')=global.__("Events")
          li(class=meta_data['url'].indexOf('/news') >= 0 ? "active" : undefined)
            a(href=lang_preurl + '/news/')=global.__("News")
          li(class=meta_data['url'].indexOf('/backstage') >= 0 ? "active" : undefined)
            a(href=lang_preurl+'/backstage/')=global.__("Backstage")
          li(class=meta_data['url'].indexOf('/newsletter') >= 0 ? "active" : undefined)
            a(href=lang_preurl+'/newsletter/')=global.__("Newsletter")
          li(class=meta_data['url'].indexOf('/contacts') >= 0 ? "active" : undefined)
            a(href=lang_preurl+'/contacts/')=global.__("Contacts")
        ul.nav.navbar-nav.navbar-right
          li.lang-en(class=meta_data["langSwitcher"]["en"] == meta_data['url'] ? 'active' : '')
            a(href=meta_data["langSwitcher"]["en"], hreflang='en', title='English') EN
          li.menu-spacer-after.lang-it(class=meta_data["langSwitcher"]["it"] == meta_data['url'] ? 'active' : '')
            a(href=meta_data["langSwitcher"]["it"], hreflang='it', title='Italiano') IT
          li.menu-spacer-after.hidden-xs
            a#searchModalButton(href="/search/")
              i.glyphicon.glyphicon-search
              .sr-only=global.__("Search")