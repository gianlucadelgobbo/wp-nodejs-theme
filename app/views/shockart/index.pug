extends layout
block content
  article#container(itemscope, itemtype='http://schema.org/Event')
    .row
      .col-lg-3.col-md-4.col-sm-6
        h1.entry-title.boxItem News
        each result, position in results.news
          include boxes/box_news
        .text-right.boxItem
          a.btn.btn-primary(href="/news/")=global.__("See all News")
      .col-lg-6.col-md-4.col-sm-6
        h1.entry-title.boxItem=global.__("Satellite Events")
        .row.isotope.results
          each result, position in results.events
            .col-lg-6.col-md-12.col-sm-12.isotopeitem
              include boxes/box_event
        .text-right.boxItem
          a.btn.btn-primary(href="/events/")=global.__("See all Events")
      .col-lg-3.col-md-4.col-sm-6
        h1.entry-title.boxItem=global.__("Exhibitions")
        each result, position in results.exhibitions
          include boxes/box_exhibition
        .text-right.boxItem
          a.btn.btn-primary(href="/exhibitions/")=global.__("See all Exhibitions")
