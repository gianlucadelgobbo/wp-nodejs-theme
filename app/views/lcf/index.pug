extends layout
block content
  section#container
    //.embed-responsive.embed-responsive-16by9
      iframe.embed-responsive-item(src="https://www.facebook.com/plugins/video.php?href=https%3A%2F%2Fwww.facebook.com%2Flivecinemafestival%2Fvideos%2F2305647839661042%2F&show_text=0&width=560", width="560", height="315", style="border:none;overflow:hidden", scrolling="no", frameborder="0", allowTransparency="true", allowFullScreen="true")
      br
    #carousel-example-generic.carousel.slide(data-ride='carousel')
      //
        Indicators
        <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        <li data-target="#carousel-example-generic" data-slide-to="3"></li>
        <li data-target="#carousel-example-generic" data-slide-to="4"></li>
        <li data-target="#carousel-example-generic" data-slide-to="5"></li>
        <li data-target="#carousel-example-generic" data-slide-to="6"></li>
        <li data-target="#carousel-example-generic" data-slide-to="7"></li>
        <li data-target="#carousel-example-generic" data-slide-to="8"></li>
        <li data-target="#carousel-example-generic" data-slide-to="9"></li>
        <li data-target="#carousel-example-generic" data-slide-to="10"></li>
        </ol>
      // Wrapper for slides
      .carousel-inner
        .item.active
          .embed-responsive.embed-responsive-16by9
            iframe.embed-responsive-item(src="https://www.facebook.com/plugins/video.php?href=https%3A%2F%2Fwww.facebook.com%2Flivecinemafestival%2Fvideos%2F485165551976639%2F&show_text=0" width="560" height="315" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allowFullScreen="true")
          //img(src='/lcf/images/carusel_img_2018/LCF2018-main.jpg', alt='LCF 2018')
        //.item
          img(src='/lcf/images/carusel_img_2017/LCF2017_slide-3.jpg', alt='LCF 2017')
          .item
            img(src='/lcf/images/carusel_img_2017/LCF2017_slide-4.jpg', alt='LCF 2017')
          .item
            img(src='/lcf/images/carusel_img_2017/LCF2017_slide-5.jpg', alt='LCF 2017')
      // Controls
        a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left
        a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right

    .row
      .col-xl-3.col-lg-4.col-md-4.col-sm-6(itemscope, itemtype='http://schema.org/ItemList')
        h1.entry-title(itemprop="name") News
        each result, position in results.news
          include boxes/box_news
        .text-right.boxItem
          a.btn.btn-primary(href=lang_preurl+"/news/", title=global.__("See all News"))=global.__("See all News")
      .col-xl-6.col-lg-4.col-md-4.col-sm-6(itemscope, itemtype='http://schema.org/ItemList')
        h1.entry-title(itemprop="name")=global.__("Satellite Events")
        .row.isotope.results
          each result, position in results.events
            .col-xl-6.col-lg-12.col-md-12.col-sm-12.isotopeitem
              include boxes/box_event
        .text-right.boxItem
          a.btn.btn-primary(href=lang_preurl+"/events/", title=global.__("See all Events"))=global.__("See all Events")

      .col-xl-3.col-lg-4.col-md-4.col-sm-6(itemscope, itemtype='http://schema.org/ItemList')
        h1.entry-title(itemprop="name")=global.__("Editions")
        each result, position in results.editions
          include boxes/box_edition
        .text-right.boxItem
          a.btn.btn-primary(href=lang_preurl+"/editions/", title=global.__("See all Editions"))=global.__("See all Editions")
