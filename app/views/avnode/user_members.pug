extends layout
block content
  article.pagepaddingtop#container(itemprop=itemprop, itemscope, itemtype='http://schema.org/Person')
    .row
      .col-sm-9
        header
          h1.entry-title(itemprop='name')=result.display_name
        if result.organisationtype
          p
            i=result.organisationtype
          p(itemprop='jobTitle')
            i=result.role_label

        div(itemprop='description')!=result.description

        if result.auth_contents && result.auth_contents["member-activities"] && result.auth_contents["member-activities"].posts.length
          - var res = result.auth_contents["member-activities"]
          section(itemscope, itemtype="https://schema.org/ItemList")
            h3(itemprop="name")=res.labels.name
            each result, position in res.posts
              .row
                .col-lg-4.col-md-12.col-sm-12
                  img.img-responsive(src=result.featured.thumbnail, alt!='Image for: ' + result.post_title, itemprop='contentUrl')
                  meta(itemprop="width" content="480")
                  meta(itemprop="height" content="270")
                .col-lg-8.col-md-12.col-sm-12
                  .text-muted=result.data_month
                  h3.list_title(itemprop='name')=result.post_title
                  .places
                    include ../_common/inc_place
                  .text-muted.small.excerpt
                    if result.post_content
                      div(itemprop='description')!=result.post_content
              hr
      .col-sm-3
        img.img-responsive.main-image.svg-image(src=result.img, alt=result.display_name, itemprop='image')

        .rientro
          p
            if result.auth_contents && result.auth_contents["member-activities"] && result.auth_contents["member-activities"].posts.length
              !=config.posttypes_labels["member-activities"] + ": " + result.auth_contents["member-activities"].posts.length
              br
            if result.auth_contents && result.auth_contents.activities && result.auth_contents.activities.posts.length
              !=config.posttypes_labels.activities + ": " + result.auth_contents.activities.posts.length
              br
            if result.auth_contents && result.auth_contents.events && result.auth_contents.events.posts.length
              !=config.posttypes_labels.events + ": " + result.auth_contents.events.posts.length
              br
            if result.auth_contents && result.auth_contents.news && result.auth_contents.news.posts.length
              !=config.posttypes_labels.news + ": " + result.auth_contents.news.posts.length
          if result.organisationurl
            p
              a(href=result.organisationurl, target="_blank")
                i.glyphicon.glyphicon-globe
                !=" "
                !=result.organisationurl
          if result.organisationemail
            p
              a(href="mailto:"+result.organisationemail)
                i.glyphicon.glyphicon-envelope
                !=" "
                !=result.organisationemail
          if result.organisationgeolocation && result.organisationgeolocation.length
            p
              img.img-responsive(src="https://maps.googleapis.com/maps/api/staticmap?size=370x200&maptype=roadmap&markers=color:red%7Clabel:A%7C"+result.organisationgeolocation[0]+","+result.organisationgeolocation[1]+"&sensor=false&key=AIzaSyBJ_PEUV1D4Uw6TktDxQp-ErObMyRQuvm4")
          include ../_common/inc_share

    if result.auth_contents && result.auth_contents.activities && result.auth_contents.activities.posts.length
      - var res = result.auth_contents.activities
      section(itemscope, itemtype="https://schema.org/ItemList")
        h3(itemprop="name")=res.labels.name
        .row.isotope.results
          each result, position in res.posts
            .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
              include boxes/box_activity
    if result.auth_contents && result.auth_contents["member-activities"] && result.auth_contents["member-activities"].posts.length
      - var res = result.auth_contents.activities
      section(itemscope, itemtype="https://schema.org/ItemList")
        h3(itemprop="name")=res.labels.name
        .row.isotope.results
          each result, position in res.posts
            .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
              include boxes/box_activity
    if result.auth_contents && result.auth_contents.events && result.auth_contents.events.posts.length
      - var res = result.auth_contents.events
      section(itemscope, itemtype="https://schema.org/ItemList")
        h3(itemprop="name")=__("Member")+" "+res.labels.name
        .row.isotope.results
          each result, position in res.posts
            .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
              include boxes/box_event
    if result.auth_contents && result.auth_contents.news && result.auth_contents.news.posts.length
      - var res = result.auth_contents.news
      section(itemscope, itemtype="https://schema.org/ItemList")
        h3(itemprop="name")=__("Member")+" "+res.labels.name
        .row.isotope.results
          each result, position in res.posts
            .col-xl-3.col-lg-4.col-md-12.col-sm-12.isotopeitem
              include boxes/box_news