extends layout
block content
  article#container(itemscope, itemtype='http://schema.org/Event')
    - console.log(result)
    .row
      .col-sm-8
        img.img-responsive.main-image(src=result.featured.full, alt=result.post_title, itemprop='image')
        .hidden-xs(itemprop='description')!=result.post_content
        include ../_common/inc_videos
      .col-sm-4
        header
          h1.entry-title(itemprop='name')!=result.post_title
        if result['wpcf-activity-foundation-year']
          p
            !=global.__("Foundation year") + ": " + result["wpcf-activity-foundation-year"]
        if result['wpcf-public-email']
          p
            a(href="mailto:"+result['wpcf-public-email'])
              i.glyphicon.glyphicon-envelope
              !=" " + result['wpcf-public-email']
        if result['wpcf-website-url']
          p
            a(href=result['wpcf-website-url'], target="_blank")
              i.glyphicon.glyphicon-home
              !=" " + result['wpcf-website-url'].replace("https://", "").replace("http://", "")
        if result['wpcf-facebook-url']
          p
            a(href=result['wpcf-facebook-url'], target="_blank")
              i.icon-facebook-squared
              !=" " + result['wpcf-facebook-url'].replace("facebook.com/", "").replace("https://", "").replace("http://", "").replace("www.", "").replace("/", "")
        if result['wpcf-twitter-url']
          p
            a(href=result['wpcf-twitter-url'], target="_blank")
              i.icon-twitter
              !=" " + result['wpcf-twitter-url'].replace("twitter.com/", "").replace("https://", "").replace("http://", "").replace("www.", "").replace("/", "")
        if result['wpcf-instagram-url']
          p
            a(href=result['wpcf-instagram-url'], target="_blank")
              i.icon-instagram
              !=" " + result['wpcf-instagram-url'].replace("instagram.com/", "").replace("https://", "").replace("http://", "").replace("www.", "").replace("/", "")
        if result['wpcf-vimeo-url']
          p
            a(href=result['wpcf-vimeo-url'], target="_blank")
              i.icon-vimeo
              !=" " + result['wpcf-vimeo-url'].replace("vimeo.com/", "").replace("https://", "").replace("http://", "").replace("www.", "").replace("/", "")
        if result['wpcf-youtube-url']
          p
            a(href=result['wpcf-youtube-url'], target="_blank")
              i.icon-youtube
              !=" " + result['wpcf-youtube-url'].replace("youtube.com/", "").replace("https://", "").replace("http://", "").replace("www.", "").replace("/", "")
        if result['wpcf-google-url']
          p
            a(href=result['wpcf-google-url'], target="_blank")
              i.icon-gplus-squared
              !=" " + result['wpcf-google-url'].replace("plus.google.com/", "").replace("https://", "").replace("http://", "").replace("www.", "").replace("/", "")
        if result['wpcf-other-url']
          p
            a(href=result['wpcf-other-url'], target="_blank")
              i.glyphicon.glyphicon-new-window
              !=" " + result['wpcf-other-url'].replace("https://", "").replace("http://", "")
        p
          i.glyphicon.glyphicon-globe
          !=" "+global.__("Locations")
        //include ../_common/inc_tags_post
        include ../_common/inc_type_hidden
        if result['wpcf-location']
          .places
            include ../_common/inc_place
        .visible-xs!=result.post_content
        //include ../_common/inc_websites
        include ../_common/inc_capauthors
        include ../_common/inc_share

