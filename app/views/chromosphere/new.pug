extends layout
block content
  if result.video_thumbnail
    article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/CreativeWork')
      .row
        .col-sm-8
          .embed-responsive.embed-responsive-16by9
            iframe.embed-responsive-item(src=result.video_thumbnail ,webkitAllowFullScreen="webkitAllowFullScreen", mozallowfullscreen="mozallowfullscreen", allowFullScreen="allowFullScreen")
          br
          .rientro.hidden-xs(itemprop='description')!=result.post_content
          include ../_common/inc_videos
        .col-sm-4
          header
            h1.entry-title(itemprop='name')!=result.post_title
          include ../_common/inc_type_hidden
          include ../_common/inc_datemonth
          .visible-xs!=result.post_content
          include ../_common/inc_websites
          include ../_common/inc_capauthors
          include ../_common/inc_share

      include ../_common/inc_grid
  else
    article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/Article')
      .row(itemprop='mainEntityOfPage')
        .col-sm-9
          header(itemprop="headline")
            h1.entry-title(itemprop='name')=result.post_title+" "
          .rientro
            include ../_common/inc_type_hidden
            .text-right
              include ../_common/inc_datemonth
              br
            div(itemprop='description')!=result.post_content
            .row
              .col-md-6
                include ../_common/inc_capauthors
              .col-md-6
                include ../_common/inc_websites
            include ../_common/inc_share
        .col-sm-3(itemprop='image', itemscope, itemtype="http://schema.org/ImageObject")
          img.img-responsive.main-image(src=result.featured.thumbnail, alt=result.post_title, itemprop='contentUrl')
          meta(itemprop="width" content="1280")
          meta(itemprop="height" content="720")

