.boxItem(itemscope='', itemtype='http://schema.org/itemListElement')
  .LabHome(itemscope='', itemtype='http://schema.org/CreativeWork')
    .row
      .col-lg-3
        .thumb-cnt
          //.catlabel=box.type
          a.ajaxloader(itemprop='url', href='/portfolio/lab/'+box.slug+"/", rel='bookmark', title!=box.post_title)
            img.img-responsive(src=box.featured.thumbnail, alt!=global.__('Image for')+': '+box.post_title, itemprop='image', itemscope='', itemtype='https://schema.org/ImageObject')
      .col-lg-9
        .box-list
          .box-list-cnt
            h3(itemprop='name')
              a.ajaxloader(itemprop='url', href='/portfolio/lab/'+box.slug+"/", rel='bookmark', title=box.post_title)!=box.post_title
            if box.data_month
              .text-muted
                .dates
                  .date=box.data_month
            .text-muted.small.excerpt
              if box.excerpt && box.excerpt.rendered
                div(itemprop='headline')
                  p!=box.excerpt.rendered
