.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
  meta(itemprop="position", content=position+1)
  .Web(itemscope, itemprop="item", itemtype='http://schema.org/CreativeWork')
    .thumb-cnt
      //.catlabel=result.type
      a.ajaxloader(href=lang_preurl+'/portfolio/web-and-mobile/'+result.slug+"/", rel='bookmark', title!=result.post_title)
        img.img-responsive(src=result.featured.thumbnail, alt!=global.__('Image for')+': '+result.post_title, itemprop='image')
    .box-list
      include ../../_common/inc_datemonth
      h3.list_title(itemprop='name')
        a.ajaxloader(itemprop='url', href=lang_preurl+'/portfolio/web-and-mobile/'+result.slug+"/", rel='bookmark', title=result.post_title)!=result.post_title
      if result.excerpt && result.excerpt.rendered
        .excerpt.text-muted(itemprop='headline')!=result.excerpt.rendered
      .tags.text-muted.small
        include ../../_common/inc_tags_post_nolink
      include ../../_common/inc_capauthors_box
