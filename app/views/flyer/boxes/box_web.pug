.boxItem(itemscope, itemtype='http://schema.org/itemListElement')
  .Web(itemscope, itemtype='http://schema.org/CreativeWork')
    .thumb-cnt
      //.catlabel=result.type
      a.ajaxloader(itemprop='image', itemscope, itemtype='https://schema.org/ImageObject', href=lang_preurl+'/portfolio/web-and-mobile/'+result.slug+"/", rel='bookmark', title!=result.post_title)
        img.img-responsive(src=result.featured.thumbnail, alt!=global.__('Image for')+': '+result.post_title, itemprop='url')
    .box-list
      if result.data_month
        .text-muted
          .dates
              .date=result.data_month
      h3.list_title(itemprop='name')
        a.ajaxloader(itemprop='url', href=lang_preurl+'/portfolio/web-and-mobile/'+result.slug+"/", rel='bookmark', title=result.post_title)!=result.post_title
      if result.excerpt && result.excerpt.rendered
        .excerpt.text-muted(itemprop='headline')!=result.excerpt.rendered
      .tags.text-muted.small
        include ../../_common/inc_tags_post_nolink
      if result.capauthors
        - var showdiv = false
        each capauthor in result.capauthors
          if capauthor.user_role == 'customer'
            - showdiv = true
        if showdiv == true
          .small
            each capauthor in result.capauthors
              if capauthor.user_role == 'customer'
                span(itemprop='sourceOrganization', itemscope, itemtype='http://schema.org/Person')
                  a(href='/customers/' + capauthor.user_login, rel='author', itemprop='author')
                    i.glyphicon.glyphicon-user
                    !=" "
                    span(itemprop='name')=capauthor.display_name
                    !=" - "
                    span(itemprop='jobTitle')=capauthor.user_role
