doctype html
html(lang=config.current_lang)
  - var lang_preurl = (config.current_lang == config.default_lang ? '' :'/'+config.current_lang)
  head
    title=meta_data.meta['title']
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    //- console.log(meta_data)
    meta(property='fb:admins', content=meta_data.meta['fb_admin'])
    meta(property='fb:app_id', content=meta_data.meta['fb_appId'])
    meta(property='og:image', content=meta_data.meta['image_src'])
    meta(property='og:title', content=meta_data.meta['title'])
    meta(property='og:description', content=meta_data.meta['og_description'])
    meta(property='og:site_name', content=meta_data.meta['name'])
    meta(property='og:url', content=config.domain+meta_data['url'])
    link(rel='canonical', href=config.domain+meta_data['url'])
    meta(property='og:type', content='website')
    meta(name='description', content=meta_data.meta['og_description'])
    meta(name='keywords', content=meta_data.meta['og_keywords'])
    meta(name='google-site-verification', content=meta_data.meta['google_webmasterstools'])
    link(rel='shortcut icon', href=config.domain+meta_data.meta['favicon'])
    link(rel='apple-touch-icon', sizes='57x57', href=config.domain+meta_data.meta['icon57'])
    link(rel='apple-touch-icon', sizes='72x72', href=config.domain+meta_data.meta['icon72'])
    link(rel='apple-touch-icon', sizes='114x114', href=config.domain+meta_data.meta['icon114'])
    link(rel='apple-touch-icon', sizes='120x120', href=config.domain+meta_data.meta['icon120'])
    link(rel='apple-touch-icon', sizes='144x144', href=config.domain+meta_data.meta['icon144'])
    link(rel='apple-touch-icon', sizes='152x152', href=config.domain+meta_data.meta['icon152'])
    // CSS
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700")
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css?ver=4.5.0', type='text/css', media='all')
    if include_gallery
      link(rel='stylesheet', href='/_common/css/socialGalleryPluginLite.css', type='text/css', media='all')
    link(rel='stylesheet', href='/_common/css/cookielawinfo.css', type='text/css', media='all')
    link(rel='stylesheet', href='/'+config.prefix+'/css/bootstrap.min.css', type='text/css')
    link(rel='stylesheet', href='/_common/css/bootstrapXL.css', type='text/css', media='all')
    link(rel='stylesheet', href='/_common/css/style.css', type='text/css', media='all')
    link(rel='stylesheet', href='/' + config.prefix + '/css/style.' + config.prefix + '.css', type='text/css', media='all')

body(class=meta_data['url'] == '/' || meta_data['url'] == '/it/' || meta_data['url'] == '/it' ? "flyer-header-expanding expanding" : undefined)
  include includes/menu

  .cnt
    //header
      .row
        .col-md-6
          #logo
            a(href=lang_preurl+'/', title=meta_data.meta['name'])
              img.img-responsive(itemprop='image', src=config.domain+meta_data.meta.logo_main, alt=meta_data.meta['name'])
        .col-md-6
          #site-description.text-right=meta_data.meta['description']
      br
    #result
      block content
    .sr-only
      | Author:
      a(href='https://plus.google.com/+Liveperformersmeeting?rel=author') LPM Live Performers Meeting
    .sr-only
      | Author:
      a(href='https://plus.google.com/+GianlucaDelGobbo?rel=author', rel='author') Gianluca Del Gobbo
    footer.navbar-inverse
      .container-fluid
        .row
          .col-sm-3(itemscope, itemtype='http://schema.org/Organization')
            a(href=lang_preurl+'/', title=meta_data.meta['name'])
              img.media-object(src=config.domain+meta_data.meta.logo_footer, alt=meta_data.meta['name'], itemprop='logo')
            br
            div
              strong(itemprop='name') Flyer communication
              br
              span(itemprop='location', itemscope, itemtype='http://schema.org/Place')
                span(itemprop='address', itemscope, itemtype='http://schema.org/PostalAddress')
                  span(itemprop='streetAddress') Via del Verano 39
                  br
                  span(itemprop='postalCode') 00185
                  !=" "
                  span(itemprop='addressLocality')=global.__('Rome')
                  !=" "
                  span(itemprop='addressCountry')=global.__('Italy')
                br
                span.hide(itemprop='geo', itemscope, itemtype='http://schema.org/GeoCoordinates')
                  span(itemprop='latitude') 41.899316
                  | ,
                  span(itemprop='longitude') 12.520403
                a(itemprop='url', href='https://www.google.com/maps/place/Flyer+Communication+Srl/@41.899316,12.520403,963m/data=!3m2!1e3!4b1!4m2!3m1!1s0x132f618364bd1e11:0x4bbf08536c8fc4c9?hl=en', target='_blank')=global.__('map')
                br
              |    Tel.
              !=" "
              a(href='tel:+390678147301', itemprop='telephone') +39 06 78147301
              br
              |    Fax
              !=" "
              span(itemprop='faxNumber') +39 06 78390805
              br
              !=global.__('VAT N°')
              !=" "
              span(itemprop='vatID') IT06589171005
              br
              a(itemprop='email', title=global.__('Write to Flyer'), href='mailto:info@flyer.it') info@flyer.it
          .col-sm-2.hidden-print
            p Corporate
            ul.footer-nav
              li
                a(title='Home', href=lang_preurl+'/')=global.__("Home")
              li
                a(title='Profile', href=lang_preurl+'/profile/')=global.__("Profile")
              li
                a(title='Awards and Grants', href=lang_preurl+'/awards-and-grants/')=global.__("Awards and Grants")
              li
                a(title='Contacts', href=lang_preurl+'/contacts/')=global.__("Contacts")
          .col-sm-2.hidden-print
            p=global.__("Social Networks")
            include includes/socials
          .col-sm-5.hidden-print
            p=global.__("Projects")
            include ../common/inc_projects
        br
        .row
          .col-sm-6
            .footer-title
              !="NO © "+new Date().getFullYear() + " " + meta_data.meta.name + " "
              a(href='mailto:info@flyer.it', title=global.__('Write to Flyer')) info@flyer.it
          .col-sm-5.pull-right
            .footer-title.pull-right
              a.tooltips(data-toggle='tooltip', href='/', target='_blank', title=global.__('This website is made by Flyer Communication'))
                img(src='/_common/images/logo_flyer.png', alt='Logo Flyer Communication')
  .modal.modal-fullscreen.fade#cntModal(tabindex='-1', role='dialog', aria-labelledby='gridSystemModalLabel')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
          h4#gridSystemModalLabel.modal-title Portfolio
        .modal-body
          .loading Loading...

