extends layout
block content
	article#container(itemscope='', itemtype='http://schema.org/Event')
		.row
			.col-sm-9
				header
					h1.entry-title(itemprop='name')!=data.post_title
				.rientro
					- var dateplace = data
					include inc_dateplace
					div(itemprop='description')!=data.post_content
					.row
						.col-md-6
							if data.capauthors
								- capauthors = data.capauthors
								include inc_capauthors
						.col-md-6
							if data.web_site.length
								- websites = data.web_site
								include inc_websites
					br
					include inc_share
			.col-sm-3
				img.img-responsive.wp-post-image(src=data.featured.thumbnail, alt=data.post_title, itemprop='image')

		if data['wpcf-add-grid-boxes'] && data['wpcf-rows'] && data['wpcf-columns']
			include inc_grid
