extends layout
block content
  #carousel-example-generic.carousel.slide(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#carousel-example-generic', data-slide-to='0')
      li(data-target='#carousel-example-generic', data-slide-to='1')
      li(data-target='#carousel-example-generic', data-slide-to='2')
    // Wrapper for slides
    .carousel-inner(role='listbox')
      .item.active
        img(src='/flyer/images/1mappingSA2.jpg', alt='AAAA')
        .carousel-caption
          h3 AAAA
          p Bla Bla Bla Bla Bla
      .item
        img(src='/flyer/images/1mappingSA2.jpg', alt='AAAA')
        .carousel-caption
          h3 AAAA
          p Bla Bla Bla Bla Bla
    // Controls
    a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next
  article#container.home(itemscope, itemtype='http://schema.org/Event')
    h1.text-center=global.__("Creativity for cutting edge events")
    section.home-services
      .container-fluid
        .row.sameheightcnt
          .col-xl-2.col-xl-offset-2.col-lg-3.sameheight
            .text-center
              .sameheightinner
                img.img-circle(src="/flyer/images/avatar_100.jpg" alt=profile['wpcf-row-1-col-1-title'])
                h3=profile['wpcf-row-1-col-1-title']
                !=profile['wpcf-row-1-col-1-html-box']
              .read-more.bottom
                a(href=(config.current_lang == 'it' ? '/it' : '') + '/profile/web-and-mobile/')
                  !=global.__("Read more")
                  !=" "
                  span.fa.fa-long-arrow-right
          .col-xl-2.col-lg-3.sameheight
            .text-center
              .sameheightinner
                img.img-circle(src="/flyer/images/avatar_100.jpg" alt=profile['wpcf-row-1-col-2-title'])
                h3=profile['wpcf-row-1-col-2-title']
                !=profile['wpcf-row-1-col-2-html-box']
              .read-more.bottom
                a(href=(config.current_lang == 'it' ? '/it' : '') + '/profile/events/')
