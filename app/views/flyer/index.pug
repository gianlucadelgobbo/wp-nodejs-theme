          .col-xl-2.col-lg-3.sameheight
            .text-center
              .sameheightinner
                img.img-circle(src="/flyer/images/avatar_100.jpg" alt=profile['wpcf-row-1-col-3-title'])
                h3=profile['wpcf-row-1-col-3-title']
                !=profile['wpcf-row-1-col-3-html-box']
              .read-more.bottom
