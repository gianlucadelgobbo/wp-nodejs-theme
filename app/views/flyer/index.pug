extends layout
block content
  #carousel.carousel.slide(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#carousel', data-slide-to='0')
      li(data-target='#carousel', data-slide-to='1')
      li(data-target='#carousel', data-slide-to='2')
    // Wrapper for slides
    .carousel-inner(role='listbox')
      .item.active
        a(href=lang_preurl+"/portfolio/live-visuals/video-mapping-maxxi-spring-attitude-2016/", title="Video Mapping MAXXI Spring Attitude 2016")
          img(src='https://flyer.dev.flyer.it/files/2016/12/event-mapping-SA.jpg', alt=global.__('Image for')+': '+'Video Mapping MAXXI Spring Attitude 2016')
      .item
        a(href=lang_preurl + "/portfolio/web-and-mobile/funder35/", title="Funder35")
          img(src='https://flyer.dev.flyer.it/files/2016/11/wm_funder35.jpg', alt=global.__('Image for') + ': ' + 'Funder35')
      .item
        a(href=lang_preurl + "/portfolio/videos/live-cinema-festival-2016-video-report/", title="Live Cinema Festival 2016 Video Report")
          img(src='https://flyer.dev.flyer.it/files/2016/11/LCF2016_report-thumb.jpg', alt=global.__('Image for') + ': ' + 'Live Cinema Festival 2016 Video Report')


    // Controls
    a.left.carousel-control(href='#carousel', role='button', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#carousel', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next
  article#container.home
    .text-center(style="padding-top: 20px;")
      h1.entry-title=meta_data.meta.description
    section.home-services(itemprop="owns", itemscope, itemtype='http://schema.org/ItemList')
      .sr-only(itemprop="name")=global.__("Services")
      .container-fluid
        .row.sameheightcnt
          .col-xl-2.col-xl-offset-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
            meta(itemprop="position", content="1")
            !=profile['wpcf-row-1-col-1-html-box']
          .col-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
            meta(itemprop="position", content="2")
            !=profile['wpcf-row-1-col-2-html-box']
          .col-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
            meta(itemprop="position", content="3")
            !=profile['wpcf-row-1-col-3-html-box']
          .col-xl-2.col-lg-3.col-md-3.sameheight.boxItem(itemprop="itemListElement", itemscope, itemtype="http://schema.org/ListItem")
            meta(itemprop="position", content="4")
            !=profile['wpcf-row-1-col-4-html-box']

            
            
            
    section.home-events(itemprop="owns", itemscope, itemtype='http://schema.org/ItemList')
      .container-fluid
        header.text-center
          h1.entry-title(itemprop="name")=global.__("Live Visuals")
          .row
            .col-xl-6.col-xl-offset-3.col-lg-8.col-lg-offset-2
              .col-xs-12!=posttype_events.description
        .row.isotope.results
          each result, position in results.events
            .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-xs-12.isotopeitem(class=position>5 ? "hidden-lg visible-xl" : "")
              include boxes/box_event
        .text-center.read-more
          a(href=lang_preurl+'/portfolio/live-visuals/')
            !=global.__("See all Events")
            !=" "
            i.icon-right
            
            
            
