extends layout
block content
  .container
    article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/CreativeWork')
      .row
        .col-sm-9
          header
            h1.entry-title(itemprop='name')=data.post_title
          .rientro
            div(itemprop='description')!=data.post_content
            .row
              .col-md-6
                !=global.__("Duration") + ": "
                span(itemprop='duration')
                  b=result["wpcf-duration"]
                br
                - var auth = []
                each capauthor in data.capauthors
                  - auth.push(capauthor.display_name)
                if auth.length
                  if auth.length == 1
                    !=global.__("Teacher") + ": "
                  else
                    !=global.__("Teachers") + ": "
                  span(itemprop='performer')
                  b=auth.join(", ")
                br
                !=global.__("Price") + ": "
                span(itemprop='offers')
                  b=result["wpcf-price"] + " â‚¬"
              .col-md-6
                if data.web_site.length && data.web_site[0].length
                  - websites = data.web_site
                  include ../_common/inc_websites
            include ../_common/inc_share
        .col-sm-3
          img.img-responsive.main-image(src=data.featured.thumbnail, alt=data.post_title, itemprop='image')

      if result['wpcf-add-grid-boxes'] && result['wpcf-rows'] && result['wpcf-columns']
        include ../_common/inc_grid
