extends layout
block content
  .container-fluid
    article#container(itemscope, itemtype='http://schema.org/ItemList')
      .row
        .col-xl-6.col-xl-offset-3.col-lg-8.col-lg-offset-2.col-xs-12
          header.header
            .text-center
              h1.entry-title=posttype.labels.name
              !=posttype.description
              include ../_common/inc_share
      .row.isotope.results
        each result, position in results
          .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-xs-12.isotopeitem(itemprop='itemListElement', itemscope, itemtype="http://schema.org/ListItem")
            include boxes/box_learning
      include ../_common/inc_pagination