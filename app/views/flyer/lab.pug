extends layout
block content
  .container
    article.pagepaddingtop#container(itemscope='', itemtype='http://schema.org/CreativeWork')
      .row
        .col-sm-9
          header
            h1.entry-title(itemprop='name')=data.post_title
          .rientro
            if data.tags
              p.tags
                each tag in data.tags
                  a(href="/lab/tags/"+tag.slug)
                    span.label.label-primary=tag.name
                  !=" "
            if data.data_month
              .text-muted
                .dates
                  .date=data.data_month
                  meta(itemprop="datePublished", content=data.datePublished)
            div(itemprop='description')!=data.post_content
            .row
              .col-md-6
                if data.capauthors
                  - capauthors = data.capauthors
                  include inc_capauthors
              .col-md-6
                if data.web_site.length
                  - websites = data.web_site
                  include inc_websites
            include inc_share
        .col-sm-3
          img.img-responsive.main-image(src=data.featured.thumbnail, alt=data.post_title, itemprop='image')


      each auth_content in data.auth_contents
        if auth_content.posts.length
          section(itemscope='', itemtype="http://schema.org/itemList")
            h3.entry-title(itemprop="name")=auth_content.labels.name
            .row.isotope
              each box in auth_content.posts
                if box.post_type == 'events'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_event
                if box.post_type == 'videos'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_video
                if box.post_type == 'web-and-mobile'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_web
                if box.post_type == 'lab'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_lab
                if box.post_type == 'learning'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_learning
                if box.post_type == 'awards-and-grants'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_award