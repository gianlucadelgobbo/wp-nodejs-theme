extends layout
block content
  .container
    article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/CreativeWork')
      .row
        .col-sm-8
          header
            h1.entry-title(itemprop='name')=result.post_title
          .rientro
            if result.data_month
              .text-muted
                .dates
                  .date=result.data_month
                  meta(itemprop="datePublished", content=result.datePublished)
              br
            div(itemprop='description')!=result.post_content
        .col-sm-4
          img.img-responsive.main-image(src=result.featured.thumbnail, alt=result.post_title, itemprop='image')
          include ../common/inc_websites
          include ../common/inc_capauthors
          include ../common/inc_share



      each auth_content in result.auth_contents
        if auth_content.posts.length
          section(itemscope, itemtype="http://schema.org/itemList")
            h3.entry-title(itemprop="name")=auth_content.labels.name
            .row.isotope
              each result in auth_content.posts
                if result.post_type == 'events'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_event
                if result.post_type == 'videos'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_video
                if result.post_type == 'web-and-mobile'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_web
                if result.post_type == 'lab'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_lab
                if result.post_type == 'learning'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_learning
                if result.post_type == 'awards-and-grants'
                  .col-lg-3.col-md-12.col-sm-12.isotopeitem
                    include boxes/box_award