extends layout
block content
  article.Subpage(itemprop="member", itemscope, itemtype='http://schema.org/ItemList')
    .container-fluid
      style.
        .row.bkgCnt:before {
          background-image: url(#{posttype.featured.full});
        }
      .row.bkgCnt
        .col-xl-6.col-xl-offset-3.col-lg-8.col-lg-offset-2.col-xs-12
          header.header
            .text-center
              h1.entry-title(itemprop="name")=posttype.post_title
              p(itemprop="description")!=posttype.post_content
              include ../_common/inc_share
    .container
      .row.isotope.results
        each result, position in results
          .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-xs-12.isotopeitem
            include boxes/box_user