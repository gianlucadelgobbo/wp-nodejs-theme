extends layout
block content
  article.Subpage(itemscope, itemtype='http://schema.org/'+itemtype)
    .container-fluid
      style.
        .Subpage .container-fluid .row:before {
          background-image: url(#{data.featured.full});
        }
      .row
        .col-xl-6.col-xl-offset-3.col-lg-8.col-lg-offset-2.col-xs-12
          header.header
            .text-center
              h1.entry-title(itemprop='name')!=data.post_title
              div(itemprop='headline')!=data.post_excerpt
              include inc_share
    .container
      .row
        .col-sm-8
          h3(itemprop='name')!=data.post_title+" Profile"
          .rientro(itemprop='description')
            !=data.post_content
          .text-muted
            .date
              !=data.data_evento
              meta(itemprop="dateModified", content=data.dateModified)

        .col-sm-4
          h3=global.__("Portfolio")
          if data.posts && data.posts.length
            if data.posts[0].post_type == "events"
              each box, index in data.posts
                if index < 10
                  include boxes/box_event
              .text-center.read-more
                a(href=(config.current_lang == 'it' ? '/it' : '') + '/portfolio/live-visuals/')
                  !=global.__("See all Events")
                  !=" "
                  span.fa.fa-long-arrow-right
            if data.posts[0].post_type == "web-and-mobile"
              each box, index in data.posts
                if index < 3
                  include boxes/box_web
              .text-center.read-more
                a(href=(config.current_lang == 'it' ? '/it' : '') + '/portfolio/web-and-mobile/')
                  !=global.__("See all Web & Mobile")
                  !=" "
                  span.fa.fa-long-arrow-right
            if data.posts[0].post_type == "lab"
              each box, index in data.posts
                include boxes/box_lab
              .text-center.read-more
                a(href=(config.current_lang == 'it' ? '/it' : '') + '/portfolio/lab/')
                  !=global.__("See all Lab")
                  !=" "
                  span.fa.fa-long-arrow-right
            if data.posts[0].post_type == "learning"
              each box, index in data.posts
                if index < 2
                  include boxes/box_learning
              .text-center.read-more
                a(href=(config.current_lang == 'it' ? '/it' : '') + '/portfolio/learning/')
                  !=global.__("See all Learning")
                  !=" "
                  span.fa.fa-long-arrow-right

      if data['wpcf-add-grid-boxes'] && data['wpcf-rows'] && data['wpcf-columns']
        include inc_grid
