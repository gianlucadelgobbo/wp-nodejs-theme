extends layout
block content
  article.Subpage(itemscope, itemtype='http://schema.org/'+itemtype)
    .container-fluid
      style.
        .Subpage .container-fluid .row:before {
          background-image: url(#{data.featured.thumbnail});
        }
      .row
        .col-xl-6.col-xl-offset-3.col-lg-8.col-lg-offset-2.col-xs-12
          header.header
            .text-center
              h1.entry-title(itemprop='name')!=data.post_title
              div(itemprop='headline')!=data.post_excerpt
              br
              include inc_share
    .container
      .row

        .col-sm-8
          h3(itemprop='name')!=data.post_title+" Profile"
          .rientro(itemprop='description')
            !=data.post_content
          .text-muted
            .date
              !=data.data_evento
              meta(itemprop="dateModified", content=data.dateModified)

        .col-sm-4
          h3=global.__("Portfolio")
          each box in data.posts
            if box.post_type == "events"
              include boxes/box_event
            if box.post_type == "web-and-mobile"
              include boxes/box_web
            if box.post_type == "lab"
              include boxes/box_lab
            if box.post_type == "learning"
              include boxes/box_learning

      if data['wpcf-add-grid-boxes'] && data['wpcf-rows'] && data['wpcf-columns']
        include inc_grid
