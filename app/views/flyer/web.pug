extends layout
block content
  .container
    article.pagepaddingtop#container(itemscope, itemtype='http://schema.org/CreativeWork')
      .row
        .col-sm-8
          img.img-responsive.main-image(src=result.featured.full, alt=result.post_title, itemprop='image')
          .hidden-xs(itemprop='description')!=result.post_content
        .col-sm-4
          header
            h1.entry-title(itemprop='name')!=result.post_title
            include ../common/inc_tags

          .rientro
            if result.data_month
              .text-muted
                .dates
                  .date=result.data_month
                  meta(itemprop="datePublished", content=result.datePublished)
            .visible-xs(itemprop='description')!=result.post_content
            include ../common/inc_websites
            include ../common/inc_capauthors
            include ../common/inc_share

      include ../common/inc_grid